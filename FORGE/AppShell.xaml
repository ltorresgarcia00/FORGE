<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/maui"
        xmlns:pages="clr-namespace:FORGE.Pages"
        x:Class="FORGE.AppShell">
    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate pages;Page1}" />
        </Tab>
        <Tab Title="FORGE Chatbot">
            <ShellContent ContentTemplate="{DataTemplate pages:Page2}" />
        </Tab>
        <Tab Title="FORGE Tracker">
            <ShellContent ContentTemplate="{DataTemplate pages:Page3}" />
        </Tab>
        </TabBar>
        </Shell>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/dotnet/2009/maui"
             x:Class="FORGE.MainPage"
             Title="FORGE App">

<Grid>
    <Image Source="FORGELOGO.png"
           Aspect="AspectFill"
           Opacity="0.7"
           HorizontalOptions="Fill"
           VerticalOptions="Fill"/>


           <VerticalStackLayout Spacing="20"
                                Padding="30"
                                VerticalOptions="Center">
            <Label Text="Welcome to FORGE"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"/>
           </VerticalStackLayout>
        </Grid>
</ContentPage>